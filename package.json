{
  "name": "ai-commit-generator",
  "displayName": "ai-commit-generator",
  "description": "Generate detailed Git commit messages from staged changes using AI",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.107.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "ai-commit-generator.showStagedDiff",
        "title": "AI Commit Generator: Show Staged Diff"
      },
      {
        "command": "ai-commit-generator.setOpenAIKey",
        "title": "AI Commit Generator: Set OpenAI API Key"
      },
      {
        "command": "ai-commit-generator.generateCommitMessage",
        "title": "AI Commit Generator: Generate Commit Message (OpenAI)"
      },
      {
        "command": "ai-commit-generator.setDeepSeekKey",
        "title": "AI Commit Generator: Set DeepSeek API Key"
      },
      {
        "command": "ai-commit-generator.generateCommitMessageDeepSeek",
        "title": "AI Commit Generator: Generate Commit Message (DeepSeek)"
      },
      {
        "command": "ai-commit-generator.setGeminiKey",
        "title": "AI Commit Generator: Set Gemini API Key"
      },
      {
        "command": "ai-commit-generator.generateCommitMessageGemini",
        "title": "AI Commit Generator: Generate Commit Message (Gemini)"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.107.0",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "esbuild": "^0.27.1",
    "eslint": "^9.39.1",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.48.1"
  },
  "dependencies": {
    "@google/genai": "^1.34.0"
  }
}
